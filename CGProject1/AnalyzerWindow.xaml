<Window x:Class="CGProject1.AnalyzerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CGProject1"
        mc:Ignorable="d"
        Title="AnalyzerWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0">
            <ComboBox SelectedIndex="0" Width="Auto" Name="ComboBoxMode" SelectionChanged="ComboBoxMode_SelectionChanged">
                <ComboBoxItem Content="Спектральная плотность мощности"/>
                <ComboBoxItem Content="Амплитудный спектр"/>
            </ComboBox>
        </Menu>
        
        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="SpectrePanel"></StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
